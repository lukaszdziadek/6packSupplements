
<div class="contact-container col-md-12">
    <div class="row">
        <img class="img-responsive" src="~/Content/images/XX/Contact/contact-us.jpg" />
        <div class="panel panel-info">
            <div class="panel-heading">
                Contact
            </div>
            <div class="panel-body">
                <div class="form-container">
                    <form class="form-horizontal" role="form">
                        <fieldset>
                            <legend>If you have any question</legend>
                            <div class="form-group" id="nameContainer">
                                <div class="row">
                                    <div class="col-md-2 col-md-offset-1">
                                        <label class="control-label" for="nameInput">Name</label>
                                    </div>
                                    <div class="input-group col-md-9">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </span>
                                        <input class="form-control col-md-10" type="text" id="nameInput" placeholder="Name" required />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group " id="mailContainer">
                                <div class="row">
                                    <div class="col-md-2 col-md-offset-1">
                                        <label class="control-label" for="email">Email</label>
                                    </div>
                                    <div class="input-group col-md-9">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-envelope"></i>
                                        </span>
                                        <input type="email" class="form-control" id="emailInput" placeholder="yourEmail@example.com" required />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group" id="messageContainer">
                                <div class="row">
                                    <div class="col-md-2 col-md-offset-1">
                                        <label class="control-label" for="message">Message</label>
                                    </div>
                                    <div class="input-group col-md-9">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </span>
                                        <textarea class="form-control" id="message" style="height:100px;"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-offset-3 g-recaptcha" data-sitekey="6LemnBETAAAAAKuojycer_IUwQPluPhOfknDCxtx"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <button id="btnSendForm"  class="btn btn-primary col-md-2 col-md-offset-3">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>                
                </div>
                <div>
                    <div class="text text-center">
                        <h1>Or just</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@ViewBag.Message


